generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Papel {
  admin
  voluntario
}

model Usuario {
  id       Int     @id @default(autoincrement())
  nome     String
  telefone String? @db.VarChar(20)
  email    String  @unique
  senha    String
  papel    Papel

  // Relações com a tabela Doacao
  doacoesFeitas     Doacao[] @relation("DoadorRelation")
  doacoesRecebidas  Doacao[] @relation("ReceptorRelation")
}

model Livro {
  id          Int      @id @default(autoincrement())
  titulo      String
  autor       String?
  foto_capa   String?
  sinopse     String?

  // Relação 1:1 com Doacao
  doacao      Doacao?
}

model Doacao {
  id            Int       @id @default(autoincrement())
  data_doacao   DateTime  @default(now()) @db.Date
  data_resgate  DateTime? @db.Date

  // Chaves estrangeiras
  id_livro     Int  @unique
  id_doador    Int
  id_receptor  Int?

  // Relações
  livro      Livro    @relation(fields: [id_livro], references: [id], onDelete: Cascade)
  doador     Usuario  @relation("DoadorRelation", fields: [id_doador], references: [id], onDelete: Cascade)
  receptor   Usuario? @relation("ReceptorRelation", fields: [id_receptor], references: [id], onDelete: SetNull)
}